%h1 Personal Information

= form_for current_user, html:{class:'ui fluid form'}, remote:true do |f|
  #error_messages
  = hidden_field_tag 'step_name', 'Personal'
  .field
    .two.fields
      .required.field
        = f.label :name
        = f.text_field :name , placeholder:  'Name'
        .label.indication
          %i.warning.circle.icon
          exactly as in SSLC book
      .required.field
        = f.label :date_of_birth
        = f.text_field :dob, class: 'datepicker'
        .label.indication
          %i.warning.circle.icon
          exactly as in SSLC book
    .two.fields
      .required.field
        = f.label  :gender
        = f.select :gender, options_for_select([ 'Male', 'Female', 'Neutral' ]), {}, class: 'ui dropdown'
        .label.indication
          %i.warning.circle.icon
          select your gender
      .required.field
        = f.label :blood_group
        = f.select :blood_group, options_for_select([ 'A+', 'A-', 'B+', 'B-', 'O+', 'O-', 'AB+', 'AB-' ]), {}, class: 'ui dropdown'
        .label.indication
          %i.warning.circle.icon
          select your blood group
    .two.fields
      .required.field
        = f.label :religion
        = f.select :religion, options_for_select([ 'Hindu', 'Islam', 'Christian', [ 'No Religion', 'None']]), {}, class: 'ui dropdown'
        .label.indication
          %i.warning.circle.icon
          select your religion
      .field
        .two.fields
          .required.field
            = f.label :Community_category
            = f.select :reservation_category_id, options_from_collection_for_select(ReservationCategory.all, :id, :name), {}, {class: 'ui search dropdown'}
            .label.indication
              %i.warning.circle.icon
              select appropriate category
          .required.field
            = f.label  :caste
            = f.select :caste_id, [], {}, {id: 'castes_select', class: "ui search dropdown"}
            .label.indication
              %i.warning.circle.icon
              select appropriate caste
    .two.fields
      .required.field
        = f.label :nationality
        = f.select :nationality_id, options_from_collection_for_select(Country.all, :id, :name), {}, {class: 'ui search dropdown'}
        .label.indication
          %i.warning.circle.icon
          select your nationality
      .field
        = f.label "Aadhar Number"
        = f.text_field :aadhar_no, placeholder: "Aadhar Number"
        .label.indication
          %i.warning.circle.icon
          enter your Aadhar Number(Indians) / SSN(Foreigners)
    .two.fields
      .required.field
        = f.label :place_of_birth
        = f.text_field :birth_place, placeholder: "Birth place"
        .label.indication
          %i.warning.circle.icon
          enter your birth place
      .field
        = f.label  :born_in
        = f.select :blood_group, options_for_select([ 'Panchayath', 'Municipality', 'Corporation' ]), {}, class: 'ui dropdown'
        .label.indication
          %i.warning.circle.icon
          select birth place status
    .two.fields
      .required.field
        = f.label :mobile_no
        = f.text_field :mobile_no, placeholder: "Mobile Number"
        .label.indication
          %i.warning.circle.icon
          enter your mobile number
      .field
        = f.label :phone_no
        = f.text_field :phone_no, placeholder: "Landline Number"
        .label.indication
          %i.warning.circle.icon
          enter your landline number
  .field
    = f.submit 'Save & Proceed', class: "ui submit proceed button"
